{
  "name": "growly-backend",
  "version": "1.0.0",
  "description": "Growly API - Habit Reflection Backend with Elysia.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:generate": "bunx prisma generate",
