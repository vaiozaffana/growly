    "@elysiajs/swagger": "^1.0.5",
    "@prisma/client": "^5.10.2",
    "elysia": "^1.0.12",
    "@google/generative-ai": "^0.2.1",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "bun-types": "latest",
    "prisma": "^5.10.2"
  },
  "module": "src/index.ts",
  "type": "module"
}
